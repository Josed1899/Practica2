@model Practica2.Entidades.Vendedores

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Home Page";
}

<div class="container mt-5">
    <div class="card mx-auto" style="max-width: 500px;">
        <div class="card-body">
            <h3 class="card-title text-center">Registro de Vendedores</h3>

            @if (ViewBag.Message != null)
            {
                <div class="alert alert-success" role="alert">
                    @ViewBag.Message
                </div>
            }

            @using (Html.BeginForm("Index", "Home"))
            {
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="input-group mb-3">
                    @Html.TextBoxFor(m => m.Cedula, new
                    {
                        @type = "text",
                        @class = "form-control",
                        @placeholder = "Cedula",
                    })
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-user"></span>
                        </div>
                    </div>
                </div>
                @Html.ValidationMessageFor(m => m.Cedula, "", new { @class = "text-danger" })

                <div class="input-group mb-3">
                    @Html.TextBoxFor(m => m.Nombre, new
                    {
                        @type = "text",
                        @class = "form-control",
                        @placeholder = "Nombre",
                    })
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-user"></span>
                        </div>
                    </div>
                </div>
                @Html.ValidationMessageFor(m => m.Nombre, "", new { @class = "text-danger" })


                <div class="input-group mb-3">
                    @Html.TextBoxFor(m => m.Correo, new
                    {
                        @type = "email",
                        @class = "form-control",
                        @placeholder = "Correo Electrónico"
                    })
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-envelope"></span>
                        </div>
                    </div>
                </div>
                @Html.ValidationMessageFor(m => m.Correo, "", new { @class = "text-danger" })

                <div class="row">
                    <div class="col-3">
                    </div>
                    <div class="col-6">
                        <button type="submit" class="btn btn-primary btn-block">Registrar Vendedor</button>
                    </div>
                </div>
            }
        </div>
    </div>

    <script src="~/root/plugins/jquery/jquery.min.js"></script>

    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
